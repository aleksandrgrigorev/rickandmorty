<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".ui.character_details.CharacterDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/characterDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/character_image"

                android:padding="@dimen/common_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/avatarGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_launcher" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/avatarGuideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_padding"
                android:text="@string/name"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/species"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/species"
                android:textColor="?android:textColorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="?android:textColorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toBottomOf="@id/species" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="?android:textColorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/origin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toBottomOf="@id/gender" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/origin"
                android:textColor="?android:textColorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toBottomOf="@id/status" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_padding"
                android:text="@string/location"
                android:textColor="?android:textColorPrimary"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textEndGuideline"
                app:layout_constraintStart_toEndOf="@id/avatarGuideline"
                app:layout_constraintTop_toBottomOf="@id/origin" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/textEndGuideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/characterEpisodes"
        layout="@layout/fragment_episodes" />

</LinearLayout>